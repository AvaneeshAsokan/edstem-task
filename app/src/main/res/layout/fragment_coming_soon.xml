<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:contentDescription="@null"
        android:rotation="-45"
        android:src="@color/red"
        android:translationX="@dimen/_2sdp"
        android:translationY="@dimen/_5sdp"
        app:layout_constraintBottom_toTopOf="@id/screen_title"
        app:layout_constraintEnd_toStartOf="@id/screen_title" />

    <TextView
        android:id="@+id/screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/playfair_display_sc_bold"
        android:text="@string/placeholder_title"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>